<Window x:Class="Fov_Menu.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d"
        Title="Fov Menu" Height="450" Width="400"
        WindowStyle="None" ResizeMode="NoResize"
        Background="#4C566A">


    <Grid>
        <Rectangle x:Name="TopBar" 
                   Fill="#2E3440" 
                   VerticalAlignment="Top" Height="30" Focusable="False" MouseDown="TopBar_MouseDown"/>

        <Label Content="Forza Mods Fov Menu"
               Foreground="White"
               VerticalAlignment="Top" HorizontalAlignment="Center"
               FontSize="15" MouseDown="TopBar_MouseDown"/>

        <Image x:Name="ExitButton" 
               Source="/Resources/ExitIcon.png"
               Width="25" Height="25" Margin="2.5"
               VerticalAlignment="Top" HorizontalAlignment="Right" MouseDown="ExitButton_MouseDown" Focusable="False" Cursor="Hand"/>

        <Path x:Name="GithubButton"
              Data="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"
              Fill="White" 
              Height="35" Width="35" Stretch="Uniform"
              VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="10"/>

        <Path x:Name="DiscordButton"
              Data="M13.545 2.907a13.227 13.227 0 0 0-3.257-1.011.05.05 0 0 0-.052.025c-.141.25-.297.577-.406.833a12.19 12.19 0 0 0-3.658 0 8.258 8.258 0 0 0-.412-.833.051.051 0 0 0-.052-.025c-1.125.194-2.22.534-3.257 1.011a.041.041 0 0 0-.021.018C.356 6.024-.213 9.047.066 12.032c.001.014.01.028.021.037a13.276 13.276 0 0 0 3.995 2.02.05.05 0 0 0 .056-.019c.308-.42.582-.863.818-1.329a.05.05 0 0 0-.01-.059.051.051 0 0 0-.018-.011 8.875 8.875 0 0 1-1.248-.595.05.05 0 0 1-.02-.066.051.051 0 0 1 .015-.019c.084-.063.168-.129.248-.195a.05.05 0 0 1 .051-.007c2.619 1.196 5.454 1.196 8.041 0a.052.052 0 0 1 .053.007c.08.066.164.132.248.195a.051.051 0 0 1-.004.085 8.254 8.254 0 0 1-1.249.594.05.05 0 0 0-.03.03.052.052 0 0 0 .003.041c.24.465.515.909.817 1.329a.05.05 0 0 0 .056.019 13.235 13.235 0 0 0 4.001-2.02.049.049 0 0 0 .021-.037c.334-3.451-.559-6.449-2.366-9.106a.034.034 0 0 0-.02-.019Zm-8.198 7.307c-.789 0-1.438-.724-1.438-1.612 0-.889.637-1.613 1.438-1.613.807 0 1.45.73 1.438 1.613 0 .888-.637 1.612-1.438 1.612Zm5.316 0c-.788 0-1.438-.724-1.438-1.612 0-.889.637-1.613 1.438-1.613.807 0 1.451.73 1.438 1.613 0 .888-.631 1.612-1.438 1.612Z"
              Fill="White"
              Height="35" Width="40"
              Stretch="Uniform"
              VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="55, 10"/>

        <Rectangle x:Name="GithubBox" Cursor="Hand" Grid.Column="1" HorizontalAlignment="Left" Height="35" Margin="10" VerticalAlignment="Bottom" Width="35" MouseDown="GithubButton_MouseDown">
            <Rectangle.Fill>
                <SolidColorBrush Color="Black" Opacity="0"/>
            </Rectangle.Fill>
        </Rectangle>

        <Rectangle x:Name="DiscordBox" Cursor="Hand" HorizontalAlignment="Left" Height="35" Margin="55,0,0,10" VerticalAlignment="Bottom" Width="40" MouseDown="DiscordButton_MouseDown">
            <Rectangle.Fill>
                <SolidColorBrush Color="Black" Opacity="0"/>
            </Rectangle.Fill>
        </Rectangle>

        <mah:ToggleSwitch x:Name="TopMost" Header="Top Most" Toggled="TopMost_Toggled" Margin="319,385,0,0" VerticalAlignment="Top" Focusable="False"/>

        <ComboBox x:Name="SaveLoadBox" Height="25" Width="100" Margin="200,411,100,13" SelectionChanged="SaveLoadBox_SelectionChanged" BorderThickness="0" Focusable="False">
            <ComboBoxItem Content="Save" Focusable="False"/>
            <ComboBoxItem Content="Load" Focusable="False"/>
            <ComboBoxItem Content="Default" Focusable="False"/>
        </ComboBox>

        <Label Focusable="False" Content="Chase Min Value" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="26,39,0,0"/>
        <Label Focusable="False" Content="Chase Max Value" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="275,39,0,0"/>
        <mah:NumericUpDown Focusable="False" Maximum="43.5" Minimum="0" TrackMouseWheelWhenMouseOver="True" ParsingNumberStyle="Float" x:Name="ChaseMinBox" TextAlignment="Left" NumericInputMode="Decimal" Height="25" Width="120" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,265,359" ValueChanged="ChaseMinBox_ValueChanged" BorderThickness="0"/>
        <mah:NumericUpDown Focusable="False" Minimum="65" TrackMouseWheelWhenMouseOver="True" ParsingNumberStyle="Float" x:Name="ChaseMaxBox" TextAlignment="Left" NumericInputMode="Decimal" Height="25" Width="120" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,15,359" ValueChanged="ChaseMaxBox_ValueChanged" BorderThickness="0"/>

        <Label Focusable="False" Content="Far Chase Min Value" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="17,108,0,0"/>
        <Label Focusable="False" Content="Far Chase Max Value" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="266,108,0,0"/>
        <mah:NumericUpDown Focusable="False" Maximum="43.5" Minimum="0" TrackMouseWheelWhenMouseOver="True" ParsingNumberStyle="Float" x:Name="FarChaseMinBox" TextAlignment="Left" NumericInputMode="Decimal" Height="25" Width="120" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,265,290" ValueChanged="FarChaseMinBox_ValueChanged" BorderThickness="0"/>
        <mah:NumericUpDown Focusable="False" Minimum="65" TrackMouseWheelWhenMouseOver="True" ParsingNumberStyle="Float" x:Name="FarChaseMaxBox" TextAlignment="Left" NumericInputMode="Decimal" Height="25" Width="120" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,15,290" ValueChanged="FarChaseMaxBox_ValueChanged" BorderThickness="0"/>

        <Label Focusable="False" Content="Driver/Dashboard Min Value" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,173,0,0"/>
        <Label Focusable="False" Content="Driver/Dashboard Max Value" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="238,173,0,0"/>
        <mah:NumericUpDown Focusable="False" Maximum="40" Minimum="0" TrackMouseWheelWhenMouseOver="True" ParsingNumberStyle="Float" x:Name="DriverAndDashMinBox" TextAlignment="Left" NumericInputMode="Decimal" Height="25" Width="120" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,265,225" ValueChanged="DriverAndDashMinBox_ValueChanged" BorderThickness="0"/>
        <mah:NumericUpDown Focusable="False" Minimum="55" TrackMouseWheelWhenMouseOver="True" ParsingNumberStyle="Float" x:Name="DriverAndDashMaxBox" TextAlignment="Left" NumericInputMode="Decimal" Height="25" Width="120" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,15,225" ValueChanged="DriverAndDashMaxBox_ValueChanged" BorderThickness="0"/>

        <Label Content="Hood Min Value" Focusable="False" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="27,238,0,0"/>
        <Label Content="Hood Max Value" Focusable="False" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="276,238,0,0"/>
        <mah:NumericUpDown Maximum="40" Focusable="False" Minimum="0" TrackMouseWheelWhenMouseOver="True" ParsingNumberStyle="Float" x:Name="HoodMinBox" TextAlignment="Left" NumericInputMode="Decimal" Height="25" Width="120" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,265,160" ValueChanged="HoodMinBox_ValueChanged" BorderThickness="0"/>
        <mah:NumericUpDown Minimum="70" Focusable="False" TrackMouseWheelWhenMouseOver="True" ParsingNumberStyle="Float" x:Name="HoodMaxBox" TextAlignment="Left" NumericInputMode="Decimal" Height="25" Width="120" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,15,160" ValueChanged="HoodMaxBox_ValueChanged" BorderThickness="0"/>

        <Label Content="Bumper Min Value" Focusable="False" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="22,308,0,0"/>
        <Label Content="Bumper Max Value" Focusable="False" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="270,308,0,0"/>
        <mah:NumericUpDown Maximum="40" Focusable="False" Minimum="0" TrackMouseWheelWhenMouseOver="True" ParsingNumberStyle="Float" x:Name="BumperMinBox" TextAlignment="Left" NumericInputMode="Decimal" Height="25" Width="120" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,265,90" ValueChanged="BumperMinBox_ValueChanged" BorderThickness="0"/>
        <mah:NumericUpDown Minimum="70" Focusable="False" TrackMouseWheelWhenMouseOver="True" ParsingNumberStyle="Float" x:Name="BumperMaxBox" TextAlignment="Left" NumericInputMode="Decimal" Height="25" Width="120" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,15,90" ValueChanged="BumperMaxBox_ValueChanged" BorderThickness="0"/>
    </Grid>
</Window>
